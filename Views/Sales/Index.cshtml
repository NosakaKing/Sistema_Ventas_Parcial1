@{
    ViewData["Title"] = "Registrar Venta";
}

<div class="container py-5">
    <h2 class="mb-4 fw-bold text-primary">Registrar Nueva Venta</h2>

    <!-- Formulario de Venta -->
    <form id="formRegistrarVenta">
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <label class="form-label">Cliente</label>
                <select id="clienteId" class="form-select" required></select>
            </div>

            <div class="col-md-4">
                <label class="form-label">Método de Pago</label>
                <select id="metodoPagoId" class="form-select" required></select>
            </div>

            <div class="col-md-4">
                <label class="form-label">Fecha</label>
                <input type="date" class="form-control" id="fechaIngreso" required />
            </div>
        </div>

        <!-- Agregar Detalle -->
        <div class="card mb-4">
            <div class="card-header bg-dark text-white">
                Agregar Detalle de Producto
            </div>
            <div class="card-body row g-3 align-items-end">
                <div class="col-md-5">
                    <label class="form-label">Producto</label>
                    <select id="productoSelectId" class="form-select" required></select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Stock</label>
                    <select id="stockId" class="form-select" required></select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Cantidad</label>
                    <input type="number" class="form-control" id="cantidadDetalle" min="1" required />
                </div>
                <div class="col-md-2">
                    <button type="button" id="btnAgregarDetalle" class="btn btn-success w-100">Agregar</button>
                </div>
            </div>
        </div>

        <!-- Tabla de Detalles -->
        <div class="table-responsive mb-4">
            <table class="table table-bordered table-hover align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>Producto</th>
                        <th>Precio</th>
                        <th>Cantidad</th>
                        <th>Subtotal</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="tablaDetallesVenta">
                    <!-- Detalles añadidos aquí -->
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3" class="text-end">Total:</th>
                        <th id="totalVenta" class="text-success">$0.00</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>

        <button type="submit" class="btn btn-primary w-100">Registrar Venta</button>
    </form>
</div>
